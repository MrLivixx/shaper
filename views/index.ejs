<%- include("_header.ejs"); %>
    <% if(data == null) { %>
        You must login through Discord to continue. <a href="/auth/login" class="btn btn-info bg-dark">Ready?</a>
    <% } else { %>
        You are logged in as <b><%= discord.username %>#<%= discord.discriminator %></b>. Your ID: <b><%= discord.id %></b>
    <% if(Boolean(data.isActivated) == false) { %>
        <br><b>Your account isn't activated.</b> If you are the owner of an instance, activate it yourself via the database.
    <% } else { %>
        <br><br><% if(code !== null) { %><br><b>Your new link: <a href="/<%- code %>">click</a></b><br><br><% } %>
        <% if(error !== null) { %><br><b><%- error %></b><br><br><% } %>
        <form action="/api/create" method="GET">
            <input class="form-control" type="text" name="code" placeholder="Enter your code (/AABBCC | If not specified - it will be generated by itself)">
            <br><input class="form-control" type="text" name="link" placeholder="Enter your link (https://sqdsh.top/)" required>
    
            <br><br><button type="submit" class="btn btn-info bg-dark">Shape this link!</button>
        </form>
        <hr><h4>Your links</h4>
        <table class="table">
            <thead>
                <tr class="bg-dark">
                    <th>Code</th>
                    <td>Link</td>
                    <td>Clicks</td>
                    <td>Delete?</td>
                </tr>
            </thead>
            <tbody id="allCodes"></tbody>
        </table>
    <% } %>
        <hr><a href="/api" class="btn btn-info btn-info bg-dark">Maybe you want an API?</a>&nbsp;&nbsp;<a href="/auth/logout" class="btn btn-info btn-danger bg-dark">Are you ready to go?</a>
    <% } %>
<%- include("_footer.ejs"); %>